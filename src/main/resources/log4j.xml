<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL">
    <Appenders>
        <File name="MyFile" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="MyFile"/>
        </Root>
        <Logger name = "com.javarush.game" level ="ALL">
            <AppenderRef ref="MyFile"/>
        </Logger>
    </Loggers>
</Configuration>